<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vues - Translation requests kanban -->

    <record id="view_translation_request_form" model="ir.ui.view">
        <field name="model">commown_translation_manager.translation_request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1', 'fold_field': 'is_closed'}"/>
                </header>

                <div class="oe_title">
                    <h1>
                        Test - To replace
                    </h1>
                </div>

                <group name="content_info">
                    <field name="content_id"/>
                    <field name="authors" widget="many2many_tags"/>
                    <field name="origin_lang"/>
                    <field name="target_lang"/>
                </group>

                <group name="translator_info">
                    <field name="translator_id"/>
                </group>

                <notebook name="request_description">
                    <page name="page_diffs" string="Differences">
                        <field name="diffs"/>
                        <div class="oe_clear"/>
                    </page>
                </notebook>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_translation_requests_kanban" model="ir.ui.view">
        <field name="model">commown_translation_manager.translation_request</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="stage_id">
                <field name="target_lang"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="row">
                                <strong>
                                    <field name="display_name"/>
                                </strong>
                            </div>

                            <div class="row">
                                <div class="col-8">
                                    <field name="translator_id"/>
                                </div>
                                <div class="col-4">
                                    <div class="oe_kanban_bottom_right">
                                        <img 
                                            t-att-src="kanban_image('res.partner', 'image_small', record.translator_id.raw_value)"
                                            t-att-alt="record.translator_id.value"
                                            width="24" height="24"
                                            class="oe_kanban_avatar float_right"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_translation_requests_kanban" model="ir.actions.act_window">
        <field name="name">Translation requests</field>
        <field name="res_model">commown_translation_manager.translation_request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="view_translation_requests_kanban"/>
        <field name="view_mode">kanban,tree,form</field>
    </record>

</odoo>