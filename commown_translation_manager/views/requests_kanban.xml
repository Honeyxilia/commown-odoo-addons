<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vues - Translation requests kanban -->
    <record id="view_translation_requests_kanban" model="ir.ui.view">
        <field name="model">commown_translation_manager.translation_request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id">
                <field name="target_lang"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <field name="display_name"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_translation_requests_kanban" model="ir.actions.act_window">
        <field name="name">Translation requests</field>
        <field name="res_model">commown_translation_manager.translation_request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="view_translation_requests_kanban"/>
        <field name="view_mode">kanban,tree,form</field>
    </record>

</odoo>