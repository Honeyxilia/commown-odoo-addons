<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_content_sites_kanban" model="ir.ui.view">
        <field name="model">commown_translation_manager.content_site</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard o_project_kanban o_emphasize_colors">
                <field name="name"/>
                <field name="url"/>
                <field name="supported_langs"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <a class="o_primary" type="object" name="action_open_site_requests">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </a>
                            <p>
                                <field name="url"/>
                            </p>
                            <div class="o_kanban_tags_section">
                                <ul>
                                    <t t-foreach="record.supported_langs.raw_value" t-as="lang">
                                        <li t-esc="lang.raw_value"/>
                                    </t>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_content_sites_kanban" model="ir.actions.act_window">
        <field name="name">Sites</field>
        <field name="res_model">commown_translation_manager.content_site</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="view_content_sites_kanban"/>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>
