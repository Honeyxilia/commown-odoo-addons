<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vues - Content configuration -->

    <record id="view_content_config_tree" model="ir.ui.view">
        <field name="name">commown_translation_manager.content.tree</field>
        <field name="model">commown_translation_manager.content</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="site_id"/>
            </tree>
        </field>
    </record>

    <record id="view_content_config_form" model="ir.ui.view">
        <field name="name">commown_translation_manager.content.form</field>
        <field name="model">commown_translation_manager.content</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_title">
                    <h1>
                        <field name="name"/>
                    </h1>
                </div>

                <notebook name="content_versions">
                    <page string="Versions">
                        <field name="translation_ids">
                            <tree>
                                <field name="language"/>
                                <field name="modification_date"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
            </form>
        </field>
    </record>

    <record id="view_content_site_search" model="ir.ui.view">
        <field name="name">Content search</field>
        <field name="model">commown_translation_manager.content</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="site_id"/>
            </search>
        </field>
    </record>

    <record id="action_content_config" model="ir.actions.act_window">
        <field name="name">Contents (Configuration)</field>
        <field name="res_model">commown_translation_manager.content</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="view_content_config_tree"/>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>