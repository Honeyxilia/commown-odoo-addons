<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vues - Sites Configuration -->
    <record id="view_content_site_config_tree" model="ir.ui.view">
        <field name="name">commown_translation_manager.content_site.tree</field>
        <field name="model">commown_translation_manager.content_site</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="url"/>
                <field name="supported_langs" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_content_site_config_form" model="ir.ui.view">
        <field name="name">commown_translation_manager.content_site.form</field>
        <field name="model">commown_translation_manager.content_site</field>
        <field name="arch" type="xml">
            <form>
                <group name="site_info">
                    <field name="name"/>
                    <field name="url"/>
                </group>
                <group name="langs">
                    <field name="supported_langs" widget="many2many_tags"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_content_site_search" model="ir.ui.view">
        <field name="name">Content Site Search</field>
        <field name="model">commown_translation_manager.content_site</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="url"/>
            </search>
        </field>
    </record>

    <record id="action_sites_config" model="ir.actions.act_window">
        <field name="name">Sites (Configuration)</field>
        <field name="res_model">commown_translation_manager.content_site</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="view_content_site_config_tree"/>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>